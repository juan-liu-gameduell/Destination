<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/interest_image"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/loading"/>

    <TextView
        android:id="@+id/interest_name"
        android:layout_width="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/interest_image"
        android:layout_toRightOf="@id/interest_image"
        android:textSize="16sp"
        tools:text="Berlin Dom"/>

    <TextView
        android:id="@+id/interest_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/interest_name"
        android:layout_below="@id/interest_name"
        tools:text="berliner strasse,47"/>

    <TextView
        android:id="@+id/interest_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/interest_image"
        android:layout_alignLeft="@id/interest_name"
        android:layout_below="@id/interest_address"
        tools:text="Rating:"/>
</RelativeLayout>